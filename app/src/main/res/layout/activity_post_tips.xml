<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:paddingTop="80dp"
    android:paddingStart="@dimen/parent_padding"
    android:paddingEnd="@dimen/parent_padding"
    android:paddingBottom="@dimen/parent_padding"
    tools:context=".ui.home.add.post_tips.PostTipsActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_img"
        android:layout_width="match_parent"
        app:cardElevation="12dp"
        app:cardCornerRadius="12dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_prev"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_add_img"
            android:contentDescription="@string/content_description">

        </ImageView>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/title_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title"
        app:layout_constraintStart_toStartOf="@+id/cv_img"
        app:layout_constraintTop_toBottomOf="@+id/cv_img"
        android:layout_marginTop="24dp"
        android:textColor="@color/white"
        android:textSize="24sp"
        style="@style/TextAppearance.AppCompat.Body1"
        android:fontFamily="@font/baloo_chettan"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/title_txt"
        app:layout_constraintTop_toBottomOf="@+id/title_txt"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeColor="@color/blue_light"
        app:boxStrokeWidthFocused="2dp"
        android:textColor="@color/white"
        app:boxBackgroundMode="outline"
        app:boxStrokeWidth="2dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tie_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:hint="@string/title"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:maxLines="1"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/desc_txt"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/baloo_chettan"
        android:textColor="@color/white"
        android:text="@string/description"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/til_title"
        app:layout_constraintTop_toBottomOf="@+id/til_title" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_desc"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:boxBackgroundMode="outline"
        app:boxStrokeWidthFocused="2dp"
        android:textColor="@color/white"
        app:boxStrokeColor="@color/blue_light"
        app:boxStrokeWidth="2dp"
        app:layout_constraintStart_toStartOf="@+id/desc_txt"
        app:layout_constraintTop_toBottomOf="@+id/desc_txt">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tie_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="textStart"
            android:hint="@string/description"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:inputType="text"
            android:maxLines="10" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/parent_padding"
        app:layout_constraintEnd_toEndOf="@+id/til_desc"
        app:layout_constraintStart_toStartOf="@+id/til_desc"
        app:layout_constraintTop_toBottomOf="@+id/til_desc"
        android:text="@string/upload_text"
        android:textColor="@color/white"
        android:includeFontPadding="true"/>

    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>